@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard Echipă Fotbal";
}

<h1>Dashboard Echipă Fotbal</h1>
<p>Bun venit la sistemul informatic al echipei de fotbal!</p>

<!-- Navbar personalizat -->
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Dashboard</a>
        <div class="d-flex">
            <!-- Afișare nume utilizator -->
            <span class="navbar-text me-3">
                @if (User.Identity.IsAuthenticated)
                {
                    <span>@User.Identity.Name</span>
                }
                else
                {
                    <span>Guest</span>
                }
            </span>

            <!-- Buton Login/Logout -->
            @if (User.Identity.IsAuthenticated)
            {
                <form method="post" asp-page="/Account/Logout">
                    <button type="submit" class="btn btn-outline-dark">Logout</button>
                </form>
            }
            else
            {
                <a class="btn btn-outline-dark" asp-page="/Account/Login">Login</a>
            }
        </div>
    </div>
</nav>

<!-- Linkuri pentru gestionarea modulelor -->
<ul>
    <li><a asp-page="/Players">Gestionare Jucători</a></li>
    <li><a asp-page="/Matches/Index">Gestionare Meciuri</a></li>
    <li><a asp-page="/Trainings/Index">Planificare Antrenamente</a></li>
</ul>
